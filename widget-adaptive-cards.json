// ==========================================
// widget-full-ac.json
// Adaptive Card template for full widget
// ==========================================
{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "${if(albumArt != '', albumArt, 'https://via.placeholder.com/72x72?text=üéµ')}",
                  "size": "medium",
                  "style": "person",
                  "altText": "Album Art"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${if(trackTitle != '', trackTitle, 'No track loaded')}",
                  "weight": "bolder",
                  "size": "medium",
                  "wrap": true,
                  "maxLines": 1
                },
                {
                  "type": "TextBlock",
                  "text": "${if(artist != '', artist, '--')}",
                  "isSubtle": true,
                  "wrap": true,
                  "maxLines": 1
                },
                {
                  "type": "TextBlock",
                  "text": "${if(album != '', album, '--')}",
                  "isSubtle": true,
                  "size": "small",
                  "wrap": true,
                  "maxLines": 1
                }
              ]
            }
          ]
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "ProgressBar",
              "value": "${progress}",
              "valueColor": "attention"
            }
          ],
          "spacing": "small"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${currentTime}",
                  "size": "small",
                  "isSubtle": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${duration}",
                  "size": "small",
                  "isSubtle": true,
                  "horizontalAlignment": "right"
                }
              ]
            }
          ],
          "spacing": "small"
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.OpenUrl",
              "title": "‚èÆÔ∏è Previous",
              "url": "musicplayer://command/previous"
            },
            {
              "type": "Action.OpenUrl",
              "title": "${if(isPlaying, '‚è∏Ô∏è Pause', '‚ñ∂Ô∏è Play')}",
              "url": "musicplayer://command/playpause",
              "style": "positive"
            },
            {
              "type": "Action.OpenUrl",
              "title": "Next ‚è≠Ô∏è",
              "url": "musicplayer://command/next"
            }
          ],
          "spacing": "medium"
        }
      ],
      "style": "emphasis"
    }
  ],
  "refresh": {
    "action": {
      "type": "Action.Execute",
      "verb": "refresh",
      "title": "Refresh"
    },
    "userIds": []
  }
}
